      "mpris",
      "custom/cava"
    ],
    // "modules-left": ["custom/startmenu", "hyprland/workspaces"],
    "modules-center": ["clock", "custom/weather"],
    "modules-right": [
      "group/systemtray",
      "hyprland/submap",
      "custom/voxtype",
      "custom/updates",
      "group/volume",
      "group/power",
      "network",
      "bluetooth",
      "custom/notifications"
    ]
  }
]

